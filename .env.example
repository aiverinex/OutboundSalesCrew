# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Serper API for web search (for enhanced lead research)
# Get your API key from: https://serper.dev/
SERPER_API_KEY=your-serper-api-key-here

# Optional: Additional API keys for enhanced functionality
# LINKEDIN_API_KEY=your-linkedin-api-key-here
# CLEARBIT_API_KEY=your-clearbit-api-key-here

# Application Settings
APP_ENV=production
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=outbound_sales_crew.log

# Email Configuration (if using email sending functionality)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Campaign Settings
DEFAULT_CAMPAIGN_DURATION=7
MAX_FOLLOWUPS=2
EMAIL_DELAY_HOURS=72

# Rate Limiting
API_RATE_LIMIT=10
API_TIMEOUT=30

# Data Storage (if using database)
# DATABASE_URL=sqlite:///outbound_sales.db
# REDIS_URL=redis://localhost:6379

# Security
# SECRET_KEY=your-secret-key-for-encryption
# JWT_SECRET=your-jwt-secret-for-auth

# Analytics & Tracking
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token

# Webhook URLs (for integrations)
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# ZAPIER_WEBHOOK_URL=your-zapier-webhook-url
